  "shortcuts": [
    {
      "name": "Create New Task",
      "short_name": "New Task",
      "description": "Create a new task quickly",
      "url": "/?action=new-task",
      "icons": [
        { 
          "src": "/icons/shortcut-new-task.png", 
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Today's Tasks",
      "short_name": "Today",
      "description": "View tasks due today",
      "url": "/tasks?filter=today",
      "icons": [
        { 
          "src": "/icons/shortcut-today.png", 
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
